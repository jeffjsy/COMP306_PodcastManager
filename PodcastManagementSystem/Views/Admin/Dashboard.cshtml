
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dashboard</h1>

<div class="container py-5">
    <h1 class="mb-4 text-center"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h1>
    <hr />

    <div class="row g-4 mt-4 justify-content-center">
        <!-- User Management Button -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title mb-3">User Management</h5>
                    <p class="card-text text-muted">Manage users, roles, and permissions across the platform.</p>
                    <a asp-action="UserManagement" class="btn btn-primary w-100">
                        <i class="bi bi-person-gear me-2"></i> Go to User Management
                    </a>
                </div>
            </div>
        </div>

        <!-- Episode Approval Queue Button -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-check2-circle display-4 text-warning mb-3"></i>
                    <h5 class="card-title mb-3">Episode Creation Approval Queue</h5>
                    <p class="card-text text-muted">Review and approve new podcast episode submissions.</p>
                    <a asp-controller="Admin" asp-action="EpisodeCreationApprovalQueue" class="btn btn-warning w-100 text-white">
                        <i class="bi bi-list-check me-2"></i> View Approval Queue
                    </a>
                </div>
            </div>
        </div>

        <!-- Analytics Dashboard Button -->
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line-fill display-4 text-success mb-3"></i>
                    <h5 class="card-title mb-3">Analytics Dashboard</h5>
                    <p class="card-text text-muted">Monitor listener engagement, top-performing shows, and trends.</p>
                    <a asp-controller="Podcaster" asp-action="EpisodeStats" class="btn btn-success w-100">
                        <i class="bi bi-graph-up-arrow me-2"></i> Open Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>