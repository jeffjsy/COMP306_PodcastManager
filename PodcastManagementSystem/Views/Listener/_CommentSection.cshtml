@using Microsoft.AspNetCore.Identity
@using System.Linq
@model PodcastManagementSystem.Models.Episode
@inject UserManager<ApplicationUser> UserManager

@{
    var comments = ViewBag.Comments as List<PodcastManagementSystem.Models.Comment>;
    var currentUserId = UserManager.GetUserId(User);
}

<h3>Comments (@(comments?.Count ?? 0))</h3>

<form asp-controller="Listener" asp-action="AddComment" asp-route-episodeId="@Model.EpisodeID" method="post" class="mb-5">
    <div class="form-group">
        <textarea name="commentText" class="form-control" rows="3" placeholder="Write a comment..." required></textarea>
    </div>
    <button type="submit" class="btn btn-sm btn-success mt-2">Post Comment</button>
</form>


<div class="comments-list">
    @if (comments != null && comments.Any())
    {
        @foreach (var comment in comments.OrderByDescending(c => c.Timestamp))
        {
            var isAuthor = comment.UserID == currentUserId;
            var timeDifference = DateTime.UtcNow.Subtract(comment.Timestamp);
            var canEdit = isAuthor && (timeDifference.TotalHours < 24);

            <div class="card mb-3 @(isAuthor ? "border-primary" : "")">
                <div class="card-body">
                    <p class="card-text">@comment.Text</p>
                    <small class="text-muted">
                        Posted by **@comment.UserID** at @comment.Timestamp.ToLocalTime()
                    </small>

                    @if (canEdit)
                    {
                        <button class="btn btn-sm btn-outline-warning float-end edit-btn-@comment.CommentID"
                                onclick="document.getElementById('edit-form-@comment.CommentID').style.display='block'; this.style.display='none';">
                            Edit
                        </button>

                        <form id="edit-form-@comment.CommentID" asp-controller="Listener" asp-action="EditComment" method="post" style="display:none;" class="mt-3">
                            <input type="hidden" name="commentId" value="@comment.CommentID" />
                            <input type="hidden" name="episodeId" value="@Model.EpisodeID" />
                            <textarea name="updatedText" class="form-control mb-2" rows="2">@comment.Text</textarea>
                            <button type="submit" class="btn btn-sm btn-success">Save Changes</button>
                            <button type="button" class="btn btn-sm btn-secondary"
                                    onclick="document.getElementById('edit-form-@comment.CommentID').style.display='none'; document.querySelector('.edit-btn-@comment.CommentID').style.display='block';">
                                Cancel
                            </button>
                            <small class="text-danger float-end">Editable for @Math.Round(24 - timeDifference.TotalHours, 1) more hours.</small>
                        </form>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">No comments yet. Be the first to start a discussion!</div>
    }
</div>