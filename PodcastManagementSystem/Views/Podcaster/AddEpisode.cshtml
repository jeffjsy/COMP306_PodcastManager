@model PodcastManagementSystem.Models.ViewModels.AddEpisodeViewModel

@{
    ViewData["Title"] = "Add New Episode";
}

<div class="mt-4">
    <h1>Publish New Episode</h1>
    <h3 class="text-secondary">For: @ViewData["PodcastTitle"]</h3>
    <hr />
</div>

<div class="row">
    <div class="col-md-8">
        <form asp-action="AddEpisode" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div> <input type="hidden" asp-for="PodcastID" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="The Inaugural Broadcast" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AudioFile" class="form-label"></label>
                <input asp-for="AudioFile" type="file" accept=".mp3,.wav,.m4a" class="form-control" />
                <span asp-validation-for="AudioFile" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-upload"></i> Publish Episode
                </button>
                <a asp-action="ManagePodcast" asp-route-podcastId="@Model.PodcastID" class="btn btn-outline-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}