@model List<PodcastManagementSystem.Models.Podcast>

@{
    ViewData["Title"] = "Your Podcaster Dashboard";
}

<h2 class="text-primary mt-4 mb-3">🎧 Your Podcast Channels</h2>
<hr />

@* --- Success/Error Messages --- *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>My Channels (@Model.Count)</h3>
    <a asp-controller="Podcaster" asp-action="CreatePodcast" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Podcast
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        You haven't launched any podcast channels yet! Click **Launch New Podcast** above to get started.
    </div>
}
else
{
    <div class="row">
        @foreach (var podcast in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@podcast.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Launched: @podcast.CreatedDate.ToShortDateString()</h6>
                        <p class="card-text flex-grow-1 overflow-hidden" style="max-height: 4.5em;">@podcast.Description</p>

                        <div class="mt-auto pt-2 border-top container">
                            <div class="row">
                                <div class="col-9">
                                    <a asp-controller="Podcaster"
                                       asp-action="ManagePodcast"
                                       asp-route-podcastId="@podcast.PodcastID"
                                       class="btn btn-sm btn-info mb-2 w-100">
                                        View & Manage
                                    </a>
                                    <div style="background-color: green">
                                        <a asp-controller="Podcaster"
                                           asp-action="AddEpisode"
                                           asp-route-podcastId="@podcast.PodcastID"
                                           class="btn btn-sm btn-primary w-100">
                                            <i class="bi bi-upload"></i> Add New Episode
                                        </a>
                                    </div>
                                </div>

                                @* <div class="col-2">
                                    <div class="d-flex justify-content-center align-items-center" style="background-color: blue">
                                        <button type="button" class="btn btn-danger">Danger</button>
                                    </div>
                                </div> *@
                                @* <div class="col-2">
                                    <div class="d-flex justify-content-center align-items-center" style="100px">
                                        <button type="button" class="btn btn-danger btn-sm flex-fill">Delete Podcast</button>
                                    </div>
                                </div> *@
                                @* <div class="col-3 d-flex justify-content-center align-items-center">
                                    <button type="button" class="btn btn-danger btn-sm w-100" style="min-width: 70px;"
                                            asp-controller="Podcaster"
                                            asp-action="Delete"
                                            asp-route-podcastId="@podcast.PodcastID">
                                        Delete Podcast
                                    </button>
                                </div> *@

                                <div class="col-3 d-flex justify-content-center align-items-center">
                                    <a asp-controller="Podcaster"
                                       asp-action="Delete"
                                       asp-route-podcastId="@podcast.PodcastID"
                                       class="btn btn-danger btn-sm w-100"
                                       style="min-width: 70px;">
                                        Delete Podcast
                                    </a>

                                </div>


                            </div>
                            @* Action: View Episodes & Stats *@
                            @* <a asp-controller="Podcaster"
                               asp-action="ManagePodcast"
                               asp-route-podcastId="@podcast.PodcastID"
                               class="btn btn-sm btn-info mb-2 w-100">
                                View & Manage
                            </a> *@

                            @* Action: Add New Episode *@
                            @* <a asp-controller="Podcaster"
                               asp-action="AddEpisode"
                               asp-route-podcastId="@podcast.PodcastID"
                               class="btn btn-sm btn-primary w-100">
                                <i class="bi bi-upload"></i> Add New Episode
                            </a> *@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

