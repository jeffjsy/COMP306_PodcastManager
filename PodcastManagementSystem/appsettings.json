{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // ----------------------
  // 1. RDBMS Connection String (Local for initial development/Migrations)
  "ConnectionStrings": {
    // This is the default name used by the template for ASP.NET Identity
    //"DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PodcastManagementDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=PodcastManagementDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    //Data Source=(localdb)\MSSQLLocalDB;Integrated Security=True;Persist Security Info=False;Pooling=False;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Application Name="SQL Server Management Studio";Command Timeout=0
  },
  // ----------------------
  // 2. AWS Configuration (DynamoDB Table Name)
  "AWS": {
    "Region": "ca-central-1",
    "SSMConfigRootPath": "/PodcastManagementSystem", 
    "DynamoDB": {
      // Must match the table name you created in the AWS Management Console
      "CommentsTableName": "PodcastComments"
    },
    // Used for S3 file uploads/links
    "S3BucketName": "comp306-podcast-media-bucket"
  }
}
